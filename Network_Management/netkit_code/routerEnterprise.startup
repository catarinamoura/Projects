# configuration interface DMZ
ifconfig eth0 190.12.130.1 netmask 255.255.255.0 broadcast 190.12.130.255 up
ifconfig eth0 hw ether 00:00:00:00:10:00


# configuration interface Inner Enterprise

ifconfig eth1 190.12.131.1 netmask 255.255.255.0 broadcast 190.12.131.255 up
ifconfig eth1 hw ether 00:00:00:00:10:01


# configuration interface IN

ifconfig eth2 190.12.128.2 netmask 255.255.255.252 broadcast 190.12.128.3 up
ifconfig eth2 hw ether 00:00:00:00:20:02

# static route ISP

route add -net 190.12.128.0 netmask 255.255.254.0 gw 190.12.128.1

# DHCP Server

/etc/init.d/dhcp3-server start


# Firewall Rules

# iptables -L -n --line-numbers 

# Clean all the rules

iptables --flush 

# Drop policie to apply

iptables -P INPUT DROP
iptables -P FORWARD DROP
iptables -P OUTPUT DROP

